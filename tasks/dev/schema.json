{
  "title": "Task",
  "type": "object",
  "required": ["text", "test_files"],
  "properties": {
    "text": {
      "title": "Test text editor",
      "type": "string",
      "format": "html",
      "options": {
        "wysiwyg": true
      }
    },
    "test_files": {
      "title": "Test files upload",
      "type": "object",
      "properties": {
        "single": {
          "title": "Single file test",
          "type": "string",
          "format": "url",
          "options": {
            "upload": true,
            "editor": true
          },
          "links": [
            {
              "href": "{{self}}",
              "class": "json-file-link"
            }
          ]
        }
      }
    }
  }
}