{
  "title": "Task",
  "type": "object",
  "required": ["test_files"],
  "properties": {

    "test_files": {
      "title": "Test files upload",
      "type": "object",
      "properties": {
        "single": {
          "title": "Single file test",
          "type": "string",
          "format": "url",
          "options": {
            "upload": true,
            "editor": true
          },
          "links": [
            {
              "href": "{{self}}",
              "class": "json-file-link"
            }
          ]
        },
        "multiple": {
          "type": "array",
          "format": "tabs",
          "title": "Multiple files test",
          "items": {
            "title": "File",
            "type": "string",
            "format": "url",
            "options": {
              "upload": true
            },
            "links": [
              {
                "href": "{{self}}",
                "class": "json-file-link"
              }
            ]
          }
        }
      }
    }
  }
}