{
  "title": "Quiz",
  "type": "object",
  "description": "You can generate here a \"Quiz task\"",

  "properties": {
    "taskMetaData": {
      "type": "object",
      "description": "Task meta-data.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the task; we generally use the path in the SVN.",
          "title": "id",
          "minLength": "5"
        },
        "license": {
          "type": "string",
          "title": "License",
          "enum": ["", "CC-BY-SA", "CC-BY-NC"]
        },
        "authors": {
          "type": "array",
          "title": "Authors",
          "items": {
            "type": "string"
          }
        },
        "language": {
          "type": "string",
          "description": "Language for the task. If you want to have this task in multiple languages, copy the \"index.html\" file generated by this editor to another file \"index_en.html\" (for instance), and edit it manually.",
          "enum": ["fr", "en", "de"]
        },
        "version": {
          "type": "string",
          "title": "Version"
        },
        "translators": {
          "type": "array",
          "title": "Translators",
          "items": {
            "type": "string"
            }
        },
        "graderUrl": {
          "type": "string",
          "title": "Server side grader URL"
        }
      },
      "required": ["id", "authors", "language", "graderUrl"],
      "generator": [{
        "output": {
          "inject": {
            "template": "index.html",
            "selector": "$json"
          }
        }
      }]
    },
    "title": {
      "type": "string",
      "title": "Task title",
        "generator": [{
          "output": {
            "inject": {
              "template": "index.html",
              "selector": "title"
            }
          }
        }]
    },
    "intro": {
      "title": "Statement, before questions",
      "description": "Task statement, displayed to the user before the questions.",
      "type": "string",
      "format": "html",
      "options": {
        "wysiwyg": true
      },
      "generator": [{
        "output": {
          "inject": {
            "template": "index.html",
            "selector": ".intro"
          }}
      }]
    },
    "questions": {
      "title": "Questions",
      "description": "Questions list.",
      "type": "string",
      "format": "textarea",
      "options": {
        "input_height": "300px"
      },
      "generator": [{
        "output": {
          "inject": {
            "template": "index.html",
            "selector": ".taskContent"
          }
        }
      }]
    },
    "graderData": {
      "title": "Grader code",
      "description": "JavaScript grader code",
      "type": "string",
      "format": "textarea",
      "options": {
        "input_height": "300px"
      },
      "generator": [{
        "output": {
          "inject": {
            "template": "grader_data.js"
          }
        }
      }]
    },
    "solution": {
      "title": "Solution",
      "type": "string",
      "format": "html",
      "options": {
        "wysiwyg": true
      },
      "generator": [{
        "output": {
          "inject": {
            "template": "index.html",
            "selector": ".taskContent"
          }
        }
      }]
    }
  },
  "required": ["taskMetaData", "title", "intro", "questions", "graderData"]
}
